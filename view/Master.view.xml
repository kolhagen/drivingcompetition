<mvc:View 
    controllerName="drivingcompetition.view.Master"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:footerbar="sap.ushell.ui.footerbar">
    <Page 
        id="masterPage" 
        title="{i18n>masterTitle}">
        <subHeader
            id="masterSubHeader">
        </subHeader>
        <content>
            <List 
                id="list" 
                select="onSelect" 
                items="{/cars}"
                mode="{device>/listMode}" 
                noDataText="{i18n>masterListNoDataText}" 
                growing="true" 
                growingScrollToLoad="true"
				>
				<items
                    id="masterList">
                        <ObjectListItem
                            title="{name}"
                            press="onListItemPress"
                            number="{rang}"
                            numberUnit="{i18n>masterListRank}">
    					</ObjectListItem>
                </items>
            </List>
        </content>
        <footer
            id="masterFooter">
            <Toolbar 
                id="masterToolbar">
                <content>
                    <footerbar:SettingsButton 
                        id="settingsButton" 
                        icon="sap-icon://action-settings" 
                        tooltip="Help">
                    </footerbar:SettingsButton>
                </content>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>